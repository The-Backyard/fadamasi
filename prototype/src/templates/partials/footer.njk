{% import "macros/_macros.njk" as macros %}
<!-- Footer -->
<footer class="bg-white text-dark pt-5 pb-2 mt-5">
    <div class="container mb-3">
        <!-- Top Footer Area -->
        <div class="row mb-4">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="d-flex align-items-center mb-3">
                    <h2 class="fw-bold mb-0">FADAMASI</h2>
                    <span class="ms-2 border-start border-warning ps-2">STORE</span>
                </div>
                <p class="text-light-emphasis mb-3">Nigeria's premier fashion destination offering authentic African designs and
                    contemporary styles for the modern individual. Quality craftsmanship meets cultural elegance.</p>
                <div class="d-flex gap-2">
                    {{ macros.socialButton("facebook", "sm", "https://social.co/fadamasi") }}
                    {{ macros.socialButton("instagram", "sm", "https://social.co/fadamasi") }}
                    {{ macros.socialButton("twitter", "sm", "https://social.co/fadamasi") }}
                    {{ macros.socialButton("pinterest", "sm", "https://social.co/fadamasi") }}
                    {{ macros.socialButton("whatsapp", "sm", "https://social.co/fadamasi") }}
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 col-12 mb-4 mb-md-0">
                <h5 class="text-dark mb-3 fw-bolder text-uppercase">Customer Service</h5>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        {{ macros.footerLink("/contact.html", "Contact Us") }}
                    </li>
                    <li class="mb-2">
                        {{ macros.footerLink("/track.html", "Track Order") }}
                    </li>
                    <li class="mb-2">
                        {{ macros.footerLink("/faq.html", "FAQ") }}
                    </li>
                    <li>
                        {{ macros.footerLink("/size_guide.html", "Size Guide") }}
                    </li>
                </ul>
            </div>
            <!-- Information Links -->
            <div class="col-lg-2 col-sm-6 col-12 mb-4 mb-md-0">
                <h5 class="text-dark mb-3 fw-bolder text-uppercase">Information</h5>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        {{ macros.footerLink("/about.html", "About Us") }}
                    </li>
                    <li class="mb-2">
                        {{ macros.footerLink("/customers/dashboard.html", "My Account") }}
                    </li>
                    <li class="mb-2">
                        {{ macros.footerLink("/terms.html", "Terms of Service") }}
                    <li>
                        {{ macros.footerLink("/privacy.html", "Privacy Policy") }}
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 mb-4 mb-md-0">
                <h5 class="text-dark mb-3 fw-bolder text-uppercase">Newsletter</h5>
                <p class="text-light-emphasis mb-3">Join our mailing list for updates on new arrivals and special offers.</p>
                <div class="input-group mb-3">
                    <input type="email" class="form-control bg-light text-dark" placeholder="Your email address">
                    <button class="btn btn-dark rounded-0" type="submit">Join</button>
                </div>
            </div>
        </div>
        <!-- Bottom Footer Area -->
        <div class="border-top border-secondary-subtle pt-3">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <p class="text-light-emphasis small mb-0 text-center text-md-start">&copy; 2025 Fadamasi Concept Store. All rights
                        reserved.</p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-center justify-content-md-end">
                        <i class="fa-brands fa-cc-mastercard me-2 fa-2x"></i>
                        <i class="fa-brands fa-cc-visa me-2 fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
