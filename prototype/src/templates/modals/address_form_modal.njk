<!-- Add/Edit Address Modal -->
<div class="modal fade" id="addressFormModal" tabindex="-1" aria-labelledby="addressFormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header bg-light border-0">
                <h5 class="modal-title fw-bold" id="addressFormModalLabel">Add Delivery Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <form>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="firstName" class="form-label">First Name</label>
                            <div class="input-group">
                                <span class="input-group-text rounded-0 bg-light"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control rounded-0" id="firstName" placeholder="First name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="lastName" class="form-label">Last Name</label>
                            <div class="input-group">
                                <span class="input-group-text rounded-0 bg-light"><i class="bi bi-person-fill"></i></span>
                                <input type="text" class="form-control rounded-0" id="lastName" placeholder="Last name">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text rounded-0 bg-light">+234</span>
                            <input type="tel" class="form-control rounded-0" id="phone" placeholder="Phone number">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="deliveryAddress" class="form-label">Delivery Address</label>
                        <div class="input-group">
                            <span class="input-group-text rounded-0 bg-light"><i class="bi bi-house-door"></i></span>
                            <input type="text" class="form-control rounded-0" id="deliveryAddress" placeholder="Street address">
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="city" class="form-label">City</label>
                            <div class="input-group">
                                <span class="input-group-text rounded-0 bg-light"><i class="bi bi-building"></i></span>
                                <input type="text" class="form-control rounded-0" id="city" placeholder="City">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="state" class="form-label">State</label>
                            <div class="input-group">
                                <span class="input-group-text rounded-0 bg-light"><i class="bi bi-geo"></i></span>
                                <input type="text" class="form-control rounded-0" id="state" placeholder="State">
                            </div>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="setAsDefault">
                        <label class="form-check-label" for="setAsDefault">
                            Set as default delivery address
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-light rounded-0 px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-dark rounded-0 px-4">Save Address</button>
            </div>
        </div>
    </div>
</div>
