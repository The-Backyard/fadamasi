<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header bg-light border-0">
                <h5 class="modal-title fw-bold" id="logoutModalLabel">Confirm Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="text-center mb-3">
                    <i class="bi bi-box-arrow-right text-danger fs-1"></i>
                </div>
                <p class="text-center mb-1">Are you sure you want to logout?</p>
                <p class="text-center text-muted small">You will need to login again to access your account.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-light rounded-0 px-4" data-bs-dismiss="modal">Cancel</button>
                <a href="/auth/login.html" class="btn btn-danger rounded-0 px-4">Yes, Logout</a>
            </div>
        </div>
    </div>
</div>
