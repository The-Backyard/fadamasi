{% extends "layouts/base.njk" %}
{% block title %}503 - Service Unavailable{% endblock %}
{% block content %}
<!-- 503 Error Hero Section -->
<section class="d-flex align-items-center my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-dark display-1"></i>
                </div>
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <i class="fas fa-tag me-2 text-muted fs-1"></i>
                    <h1 class="mb-0 display-1 fw-bolder text-danger">503</h1>
                    <i class="fas fa-tag ms-2 text-muted fs-1 fa-flip-horizontal"></i>
                </div>
                <h2 class="display-5 fw-bold mb-3">We're Temporarily Unavailable</h2>
                <p class="lead text-muted mb-5">
                    Our website is currently undergoing maintenance or experiencing high traffic. We'll be back
                    shortly.
                </p>
                <div class="d-grid gap-2 d-sm-flex justify-content-center">
                    <button onclick="window.location.reload()"
                        class="btn btn-dark rounded-0 text-uppercase fw-bold py-3 px-4">
                        <i class="bi bi-arrow-repeat me-1"></i> Reload Page
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
