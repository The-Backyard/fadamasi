{% extends "layouts/base.njk" %}
{% import "macros/_macros.njk" as macros %}

{% block title %}My Addresses{% endblock %}

{% block content %}

{{ macros.breadcrumbs([
    {'title': 'My Addresses'}
]) }}

<div class="container py-3">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            {{ macros.sidebarNav('addresses') }}
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Page Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div
                        class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-lg-between">
                        <div class="mb-3 mb-lg-0">
                            <h4 class="fw-bold mb-1">My Addresses</h4>
                            <p class="text-muted mb-0 text-nowrap">Manage your delivery addresses</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-dark rounded-0 w-100 w-lg-auto" data-bs-toggle="modal" data-bs-target="#addressFormModal">
                                <i class="bi bi-plus"></i> Add New
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <!-- Empty State (hidden with d-none) -->
                    <div class="p-5 text-center d-none">
                        <div class="py-4">
                            <div class="mb-3">
                                <i class="bi bi-geo-alt text-muted fs-1"></i>
                            </div>
                            <h5 class="fw-bold mb-2">No Saved Address</h5>
                            <p class="text-muted mb-3">You haven't added any delivery address yet.</p>
                            <button class="btn btn-dark rounded-0" data-bs-toggle="modal"
                                data-bs-target="#addressFormModal">
                                Add Delivery Address
                            </button>
                        </div>
                    </div>

                    <!-- Address List -->
                    <div class="row g-3">
                        {{ macros.addressCard({
                            isDefault: true,
                            name: "Onyechie Gift",
                            street: "23 Sholabomi Crescent, Off Oladimeji Street, Aguda",
                            city: "Surulere",
                            state: "Lagos",
                            phone_number: "+234 7062299016"
                        }) }}

                        {{ macros.addressCard({
                            isDefault: false,
                            name: "Ogbodo Amara",
                            street: "14 Ogunbusola Street, Off Balogun Bus-stop",
                            city: "Iju-Ishaga",
                            state: "Lagos",
                            phone_number: "+234 8060628003"
                        }) }}

                        {{ macros.addressCard({
                            isDefault: false,
                            name: "Cyril Frankline",
                            street: "5B Admiralty Way, Lekki Phase 1",
                            city: "Lekki",
                            state: "Lagos",
                            phone_number: "+234 8033456789"
                        }) }}

                        {{ macros.addressCard({
                            isDefault: false,
                            name: "Igwebuike Favour",
                            street: "Block 4, Flat 23, 1004 Estate, Victoria Island",
                            city: "Victoria Island",
                            state: "Lagos",
                            phone_number: "+234 7098765432"
                        }) }}

                        {{ macros.addressCard({
                            isDefault: false,
                            name: "James Perfect",
                            street: "17 Modupe Johnson Crescent, Adeniyi Jones",
                            city: "Ikeja",
                            state: "Lagos",
                            phone_number: "+234 8023456789"
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "modals/logout_confirmation.njk" %}
{% include "modals/address_form_modal.njk" %}
{% include "modals/address_delete_confirm.njk" %}
{% include "modals/make_default_address.njk" %}

{% endblock %}
