{% extends "layouts/base.njk" %}
{% import "macros/_macros.njk" as macros %}

{% block title %}Change Password{% endblock %}

{% block content %}

{{ macros.breadcrumbs([
    {'title': 'Change Password'}
]) }}

<div class="container py-3">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            {{ macros.sidebarNav('change_password') }}
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white p-3">
                    <h5 class="mb-0 fw-bold">Change Password</h5>
                </div>
                <div class="card-body p-4">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword">
                            </div>
                            <div class="col-md-6">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword">
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword">
                            </div>
                            <div class="col-12">
                                <!-- Password requirements -->
                                <div class="card bg-light border-0 mb-4">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-2">Password requirements:</h6>
                                        <ul class="list-unstyled mb-0 small">
                                            <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>Minimum 8 characters</li>
                                            <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>At least one uppercase letter</li>
                                            <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>At least one number</li>
                                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>At least one special character</li>
                                        </ul>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark rounded-0">Update Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "modals/logout_confirmation.njk" %}

{% endblock %}
