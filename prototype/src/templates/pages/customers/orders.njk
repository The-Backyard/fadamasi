{% extends "layouts/base.njk" %}
{% import "macros/_macros.njk" as macros %}

{% block title %}My Orders{% endblock %}

{% block content %}

{{ macros.breadcrumbs([
    {'title': 'My Orders'}
]) }}

<div class="container py-3">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            {{ macros.sidebarNav('orders') }}
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Page Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div
                        class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-lg-between">
                        <div class="mb-3 mb-lg-0">
                            <h4 class="fw-bold mb-1">My Orders</h4>
                            <p class="text-muted mb-0 text-nowrap">Track and manage your orders</p>
                        </div>
                        <div>
                            <a href="/track.html" class="btn btn-outline-dark rounded-0 w-100 w-lg-auto">
                                <i class="bi bi-truck me-1"></i> Track Order
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders Filter -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-3">
                    <div class="d-flex flex-column flex-lg-row justify-content-lg-between align-items-start align-items-lg-center gap-3">
                        <div class="d-flex flex-column flex-md-row gap-2 gap-md-3">
                            <select class="form-select rounded-0">
                                <option selected>All Statuses</option>
                                <option>Pending</option>
                                <option>Processing</option>
                                <option>Shipped</option>
                                <option>Delivered</option>
                                <option>Cancelled</option>
                            </select>
                            <div class="input-group">
                                <input type="text" class="form-control rounded-0" placeholder="Search orders...">
                                <span class="input-group-text bg-light rounded-0">
                                    <i class="bi bi-search"></i>
                                </span>
                            </div>
                        </div>
                        <div class="d-grid d-lg-block">
                            <button class="btn btn-dark rounded-0 px-4">Filter Orders</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders List -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover text-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="px-3 py-3">Order ID</th>
                                    <th scope="col" class="px-3 py-3">Date Ordered</th>
                                    <th scope="col" class="px-3 py-3">Items</th>
                                    <th scope="col" class="px-3 py-3">Total</th>
                                    <th scope="col" class="px-3 py-3">Status</th>
                                    <th scope="col" class="px-3 py-3">Expected Delivery</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ macros.orderRow(
                                    "#FDM-7829", "Mar 28, 2025", 3, "45,000", "Delivered", "success", "Delivered Mar 30"
                                ) }}

                                {{ macros.orderRow(
                                    "#FDM-7830", "Mar 22, 2025", 1, "18,500", "Shipped", "info", "Apr 3, 2025"
                                ) }}

                                {{ macros.orderRow(
                                    "#FDM-7831", "Mar 15, 2025", 2, "34,750", "Processing", "warning", "Apr 6, 2025"
                                ) }}

                                {{ macros.orderRow(
                                    "#FDM-7832", "Mar 8, 2025", 4, "62,300", "Delivered", "success", "Delivered Mar 12"
                                ) }}

                                {{ macros.orderRow(
                                    "#FDM-7833", "Feb 22, 2025", 1, "95,000", "Cancelled", "danger", "Cancelled Feb 25"
                                ) }}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Empty State (Hidden by default) -->
                <div class="card-body p-4 text-center d-none">
                    <div class="py-5">
                        <div class="mb-3">
                            <i class="bi bi-box-seam text-muted fs-1"></i>
                        </div>
                        <h5 class="fw-bold mb-2">No Orders Yet</h5>
                        <p class="text-muted mb-3">You haven't placed any orders with us yet.</p>
                        <a href="products.html" class="btn btn-dark rounded-0 px-4 py-2">Start Shopping</a>
                    </div>
                </div>
            </div>
            {% include "partials/pagination.njk" %}
        </div>
    </div>
</div>

{% include "modals/logout_confirmation.njk" %}

{% endblock %}
