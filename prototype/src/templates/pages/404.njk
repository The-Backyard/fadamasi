{% extends "layouts/base.njk" %}
{% block title %}404 - Page Not Found{% endblock %}
{% block content %}
<!-- 404 Error Hero Section -->
<section class="d-flex align-items-center my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                </div>
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <i class="fas fa-tag me-2 text-muted fs-1"></i>
                    <h1 class="mb-0 display-1 fw-bolder">404</h1>
                    <i class="fas fa-tag ms-2 text-muted fs-1 fa-flip-horizontal"></i>
                </div>
                <h2 class="display-5 fw-bold mb-3">Oops! Page Not Found</h2>
                <p class="lead text-muted mb-5">
                    The page you're looking for does not exist, or has been moved and is no longer available.
                </p>
                <div class="d-grid gap-3 d-sm-flex justify-content-center">
                    <a href="index.html" class="btn btn-dark rounded-0 text-uppercase fw-bold py-3 px-4">
                        <i class="bi bi-house-door me-2"></i> Back to Homepage
                    </a>
                    <a href="products.html" class="btn btn-outline-dark rounded-0 text-uppercase fw-bold py-3 px-4">
                        <i class="bi bi-bag me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
