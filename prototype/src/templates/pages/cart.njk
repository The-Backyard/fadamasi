{% extends "layouts/base.njk" %}
{% import "macros/_macros.njk" as macros %}

{% block title %}Shopping Cart{% endblock %}
{% block content %}

{{ macros.breadcrumbs([
    {'title': 'Shopping Cart'}
]) }}

<!-- Page Content -->
<div class="container py-4">

    <h3 class="fw-bold mb-4">Cart (3)</h3>
    <div class="row">
        <!-- Cart Items Column -->
        <div class="col-lg-8 order-1">
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <!-- Cart Items Header -->
                    <div class="row d-none d-md-flex text-muted mb-3 pb-2 border-bottom">
                        <div class="col-md-7">
                            <span>Product</span>
                        </div>
                        <div class="col-md-2 text-center">
                            <span>Quantity</span>
                        </div>
                        <div class="col-md-3 text-end">
                            <span>Price</span>
                        </div>
                    </div>

                    <!-- Cart Items -->
                    <div class="row mb-4 border-bottom pb-4">
                        {{ macros.cartItem({
                            productUrl: "/product.html", image: "/images/native_4.png", name: "Ankara Fabric - Premium Quality", color: "#ffd700", size: "Medium", quantity: 2, totalPrice: "₦35,998", unitPrice: "₦17,999"
                        }) }}
                    </div>

                    <div class="row">
                        {{ macros.cartItem({
                            productUrl: "/product.html", image: "/images/native_3.png", name: "Traditional Agbada 3-Piece Set", color: "#ddff11", size: "Large", quantity: 1, totalPrice: "₦45,999", unitPrice: "₦45,999"
                        }) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary Column -->
        <div class="col-lg-4 order-2">
            <!-- Coupon Code -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Apply Coupon</h5>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter promo code">
                        <button class="btn btn-dark" type="button">Apply</button>
                    </div>
                    <div class="d-flex align-items-center mt-3 p-2 bg-light rounded">
                        <div class="me-auto">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-tag-fill text-success me-2"></i>
                                <span class="fw-semibold">NEWCUSTOMER</span>
                            </div>
                            <small class="text-success">₦5,000 discount applied</small>
                        </div>
                        <button class="btn btn-sm btn-link text-danger" data-bs-toggle="modal" data-bs-target="#removeCouponModal">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-4">Cart Summary</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal</span>
                        <span class="fw-semibold">₦81,997</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Discount</span>
                        <span class="fw-semibold text-success">-₦5,000</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold">Total</span>
                        <span class="fw-bold fs-5">₦78,497</span>
                    </div>
                    <a class="btn btn-dark w-100 mb-3 py-2 fw-semibold" href="/checkout.html">
                        Proceed to Checkout <i class="bi bi-arrow-right"></i>
                    </a>
                    <a href="/products.html" class="btn btn-outline-dark w-100 py-2 fw-semibold">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Available Discount Code Component - Enhanced Floating Style -->
            <div class="mb-4 position-relative">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="alert alert-dark m-0 border-0 rounded-0 d-flex align-items-center p-3 bg-dark">
                            <div class="text-white d-flex align-items-center">
                                <i class="bi bi-gift me-2"></i>
                                <span class="fw-bold">Special Offer Available</span>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="d-flex mb-3">
                                <div class="border border-2 border-dark rounded p-2 px-3 me-3 fw-bold" style="letter-spacing: 1px;">
                                    ANKARA20
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">₦4,000 off Ankara fabrics</h6>
                                    <p class="text-muted mb-0 small">For purchases above ₦30,000</p>
                                </div>
                            </div>
                            <div class="bg-light p-3 rounded mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Discount amount:</span>
                                    <span class="fw-semibold">₦4,000</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Your cart total after discount:</span>
                                    <span class="fw-semibold">₦77,997</span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-danger small">
                                    <i class="bi bi-exclamation-circle me-1"></i> Limited time offer
                                </span>
                                <span class="badge bg-light text-dark border">Valid for 15 more days</span>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-dark">Apply to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Empty State Cart -->
    <div class="row d-none">
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm text-center py-3 py-md-5">
                <div class="card-body p-2 p-md-3">
                    <div class="mb-4">
                        <i class="bi bi-cart-x text-secondary display-1"></i>
                    </div>
                    <h3 class="fw-semibold mb-2 mb-md-3">Your Shopping Cart is Empty</h3>
                    <p class="text-muted mb-4 mb-md-5 fs-6 fs-md-5 px-2 px-md-4 mx-auto" style="max-width: 600px;">
                        Looks like you haven't added any items to your cart yet. Start shopping to find great
                        Nigerian fashion products.</p>
                    <a href="/products.html" class="btn btn-dark px-4 px-md-5 py-2 py-md-3 fs-6 fs-md-5 rounded-0">
                        <i class="bi bi-arrow-left me-2"></i>Browse Our Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "modals/remove_cartitem_confirm.njk" %}
{% include "modals/remove_coupon_confirm.njk" %}

{% endblock %}
