{% extends "layouts/base.njk" %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
<!-- Password Reset Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-dark">Reset Your Password</h2>
                            <p class="text-secondary small">Enter your email address and we'll send you instructions
                                to reset your password.</p>
                        </div>

                        <!-- Request Reset Form -->
                        <form action="password_reset_done.html">
                            <!-- Email input -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white rounded-0"><i class="bi bi-envelope"></i></span>
                                    <input type="email" class="form-control rounded-0" id="email"
                                        placeholder="pythonian@fadamasi.com" required>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-dark rounded-0 py-2">Send Reset Link</button>
                            </div>

                            <!-- Back to login -->
                            <div class="text-center">
                                <a href="login.html" class="link-offset-2 link-offset-2-hover link-underline-opacity-0 link-underline-opacity-75-hover link-primary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
