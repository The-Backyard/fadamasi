{% extends "layouts/base.njk" %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
<!-- Password Reset Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-dark">Reset Your Password</h2>
                            <p class="text-secondary small">Enter your email address and we'll send you instructions
                                to reset your password.</p>
                        </div>

                        <!-- Request Reset Form -->
                        <form>
                            <!-- Email input -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                                    <input type="email" class="form-control" id="email"
                                        placeholder="pythonian@example.com" required>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid gap-2 mb-3">
                                <a href="password_reset_done.html" class="btn btn-dark py-2">Send Reset Link</a>
                            </div>

                            <!-- Back to login -->
                            <div class="text-center">
                                <a href="login.html" class="text-decoration-none">
                                    <i class="bi bi-arrow-left me-1"></i>Back to login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
