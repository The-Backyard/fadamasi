{% extends "layouts/base.njk" %}

{% block title %}Register{% endblock %}

{% block content %}
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-dark">Create an Account</h2>
                            <p class="text-secondary small">Join us to start shopping</p>
                        </div>

                        <!-- Registration Form -->
                        <form action="/customers/dashboard.html">
                            <!-- Email and Username row -->
                            <div class="row mb-3 gx-2">
                                <!-- Email input -->
                                <div class="col-md-7 mb-3 mb-md-0">
                                    <label for="email" class="form-label">Email address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light rounded-0"><i class="bi bi-envelope"></i></span>
                                        <input type="email" class="form-control rounded-0" id="email"
                                            placeholder="pythonian@fadamasi.com" required>
                                    </div>
                                </div>

                                <!-- Username input -->
                                <div class="col-md-5">
                                    <label for="username" class="form-label">Username</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light rounded-0"><i class="bi bi-person-badge"></i></span>
                                        <input type="text" class="form-control rounded-0" id="username" placeholder="Pythonian"
                                            required>
                                    </div>
                                </div>
                            </div>

                            <!-- First and Last name row -->
                            <div class="row mb-3 gx-2">
                                <!-- First Name input -->
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light rounded-0"><i class="bi bi-person"></i></span>
                                        <input type="text" class="form-control rounded-0" id="firstName" placeholder="Seyi"
                                            required>
                                    </div>
                                </div>

                                <!-- Last Name input -->
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light rounded-0"><i class="bi bi-person-fill"></i></span>
                                        <input type="text" class="form-control rounded-0" id="lastName" placeholder="Pythonian"
                                            required>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone Number input -->
                            <div class="mb-3">
                                <label for="phoneNumber" class="form-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text rounded-0 bg-light rounded-0">+234</span>
                                    <input type="tel" class="form-control rounded-0" id="phone" placeholder="812 345 6789">
                                </div>
                            </div>

                            <!-- Password input -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light rounded-0"><i class="bi bi-shield-lock"></i></span>
                                    <input type="password" class="form-control rounded-0" id="password"
                                        placeholder="Create a password" required>
                                </div>
                                <div class="form-text">
                                    Must be at least 8 characters long and include a number and special character.
                                </div>
                            </div>

                            <!-- Confirm Password input -->
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light rounded-0"><i class="bi bi-shield-check"></i></span>
                                    <input type="password" class="form-control rounded-0" id="confirmPassword"
                                        placeholder="Confirm your password" required>
                                </div>
                            </div>

                            <!-- Terms agreement checkbox -->
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="termsAgreement" required>
                                <label class="form-check-label" for="termsAgreement">
                                    I agree to the <a href="/terms.html" class="link-offset-2 link-offset-2-hover link-underline-opacity-0 link-underline-opacity-75-hover link-primary">Terms of Service</a> and
                                    <a href="/policy.html" class="link-offset-2 link-offset-2-hover link-underline-opacity-0 link-underline-opacity-75-hover link-primary">Privacy Policy</a>
                                </label>
                            </div>

                            <!-- Register button -->
                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-dark rounded-0 py-2">Create Account</button>
                            </div>

                            <!-- Social signup options -->
                            <div class="mb-3">
                                <div class="text-center text-secondary small mb-2">Or sign up with</div>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button type="button" class="btn btn-outline-secondary flex-grow-1 rounded-0">
                                        <i class="bi bi-google me-2"></i>Google
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary flex-grow-1 rounded-0">
                                        <i class="bi bi-facebook me-2"></i>Facebook
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Login link -->
                        <div class="text-center mt-4">
                            <span class="text-secondary">Already have an account?</span>
                            <a href="login.html" class="link-offset-2 link-offset-2-hover link-underline-opacity-0 link-underline-opacity-75-hover link-primary">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
