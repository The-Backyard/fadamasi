{% extends "layouts/base.njk" %}

{% block title %}Create New Password{% endblock %}

{% block content %}
<!-- Password Reset Confirm Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold text-dark">Create New Password</h2>
                            <p class="text-secondary small">Your new password must be different from previously used
                                passwords.</p>
                        </div>

                        <!-- New Password Form -->
                        <form>
                            <!-- New Password input -->
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
                                    <input type="password" class="form-control" id="newPassword"
                                        placeholder="Enter new password" required>
                                </div>
                                <div class="form-text">
                                    Must be at least 8 characters long and include a number and special character.
                                </div>
                            </div>

                            <!-- Confirm New Password input -->
                            <div class="mb-4">
                                <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-lock-fill"></i></span>
                                    <input type="password" class="form-control" id="confirmNewPassword"
                                        placeholder="Confirm new password" required>
                                </div>
                            </div>

                            <!-- Password requirements -->
                            <div class="card bg-light border-0 mb-4">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">Password requirements:</h6>
                                    <ul class="list-unstyled mb-0 small">
                                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>At
                                            least 8 characters</li>
                                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>At
                                            least one number</li>
                                        <li class="mb-1"><i class="bi bi-check-circle-fill text-success me-2"></i>At
                                            least one special character</li>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Different from
                                            previous passwords</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid gap-2">
                                <a href="password_reset_complete.html" class="btn btn-dark py-2">Reset Password</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
