{% extends "layouts/base.njk" %}
{% import "macros/_macros.njk" as macros %}

{% block title %}Search{% endblock %}
{% block content %}

{{ macros.breadcrumbs([
    {'title': 'Search'}
]) }}

<!-- Main Content -->
<div class="container my-4">
    <div class="row g-4">
        <!-- No Results Content -->
        <div class="col-lg-12">
            <div class="card border shadow-sm p-4 text-center">
                <div class="py-5">
                    <div class="mb-4">
                        <i class="bi bi-search display-1 text-muted"></i>
                    </div>
                    <h2 class="mb-3">No Results Found</h2>
                    <div class="mb-4">
                        <form class="d-flex justify-content-center">
                            <div class="input-group" style="max-width: 500px;">
                                <input class="form-control" type="search" name="q" placeholder="Try another search"
                                    value="vintage cowboy boots" aria-label="Search">
                                <button class="btn btn-dark rounded-0" type="submit">
                                    Search
                                </button>
                            </div>
                        </form>
                    </div>
                    <p class="text-muted mb-4">We couldn't find any products matching "<strong>vintage cowboy
                            boots</strong>".</p>

                    <div class="row justify-content-center mb-4">
                        <div class="col-md-8">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title">Search Tips</h5>
                                    <ul class="text-start">
                                        <li>Check your spelling</li>
                                        <li>Try using fewer or more general keywords</li>
                                        <li>Browse our categories instead</li>
                                        <li>Try searching for similar items</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h5 class="mb-3">Popular Categories</h5>
                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            <a href="#" class="btn btn-outline-dark">Women's Shoes</a>
                            <a href="#" class="btn btn-outline-dark">Men's Boots</a>
                            <a href="#" class="btn btn-outline-dark">Accessories</a>
                            <a href="#" class="btn btn-outline-dark">New Arrivals</a>
                            <a href="#" class="btn btn-outline-dark">Sale Items</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
