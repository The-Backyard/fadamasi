{% macro reviewCard(review) %}
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
            <h5 class="mb-0">{{ review.name }}</h5>
            {% if review.verified %}
            <div class="text-success small">
                <i class="bi bi-patch-check-fill me-1"></i>
                <span>Verified Purchase</span>
            </div>
            {% endif %}
        </div>
        <div class="text-warning mb-2 small" title="{{ review.rating }}">
            {% for i in range(1, 6) %}
                <i class="bi bi-star{% if i <= review.rating %}-fill{% endif %}"></i>
            {% endfor %}
        </div>
        <h6 class="mb-2">{{ review.title }}</h6>
        <p class="mb-2">{{ review.content }}</p>
        <div class="mb-2 d-flex justify-content-between align-items-center text-muted small">
            <span>{{ review.date }}</span>
            <div class="d-flex align-items-center">
                <div class="d-flex align-items-center me-3">
                    <i class="bi bi-hand-thumbs-up me-1" title="Helpful"></i>
                    <span>{{ review.helpful }}</span>
                </div>
                <div class="d-flex align-items-center">
                    <i class="bi bi-hand-thumbs-down me-1" title="Not Helpful"></i>
                    <span>{{ review.unhelpful }}</span>
                </div>
            </div>
        </div>
        <p class="mb-0 pt-2 border-top small">
            <i class="me-1 text-success bi bi-hand-thumbs-up"></i> {{ review.helpful }} person{{ 's' if review.helpful != 1 }} found this review useful</p>
    </div>
</div>
{% endmacro %}

